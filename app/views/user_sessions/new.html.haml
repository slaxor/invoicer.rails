<h1>Login</h1>

=form_for @user_session, :url => user_session_path do |f|
  = f.error_messages
  = f.label :login
  %br/
  = f.text_field :login
  %br/
  = f.label :password
  %br/
  = f.password_field :password
  %br/
  = f.label :remember_me
  = f.check_box :remember_me
  = f.submit "Login"
or
= link_to 'sign up', new_user_path
